{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },  "ConnectionStrings": {
    "DefaultConnection": "#{DB_CONNECTION_STRING}#",
    "Redis": "#{REDIS_CONNECTION_STRING}#"
  },  "Jwt": {
    "Key": "#{JWT_SECRET_KEY}#",
    "Issuer": "#{JWT_ISSUER}#",
    "Audience": "#{JWT_AUDIENCE}#",
    "ExpiryInMinutes": "#{JWT_EXPIRY_MINUTES}#"
  },
  "Cors": {
    "Origins": [
      "http://localhost:3000",
      "https://localhost:3001",
      "http://localhost:5000",
      "https://localhost:5001"
    ]
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "GenericAPI",
    "Database": 0
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@genericapi.com",
    "FromName": "Generic API"
  },
  "FileUpload": {
    "MaxFileSize": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"],
    "UploadPath": "uploads"
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "SlidingExpirationMinutes": 15,
    "MaxCacheSize": 1000
  },
  "AuditLog": {
    "SecretKey": "YourAuditLogSecretKeyForIntegrityVerification123456789",
    "RetentionDays": 365,
    "EnableDatabaseStorage": true,
    "EnableFileStorage": false
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [],
    "EndpointWhitelist": [
      "get:/health",
      "get:/metrics"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "*",
        "Period": "1d",
        "Limit": 10000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "127.0.0.1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 200
          }
        ]
      }
    ]
  },
  "Security": {
    "EnableSecurityHeaders": true,
    "EnableCSP": true,
    "EnableHSTS": true,
    "CSPReportUri": "/api/security/csp-report",
    "MaxRequestBodySize": 10485760,
    "EnableRequestSizeLimit": true
  },
  "Monitoring": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableDetailedErrors": false,
    "MetricsPath": "/metrics",
    "HealthCheckPath": "/health"
  },
  "MultiTenant": {
    "DefaultTenant": {
      "Id": "default",
      "Identifier": "default",
      "Name": "Default Tenant",
      "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=GenericAPIDb;Trusted_Connection=true;MultipleActiveResultSets=true"
    },
    "EnableTenantIsolation": false,
    "TenantResolutionStrategy": "Claim"
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "KeepAliveIntervalSeconds": 15,
    "ClientTimeoutIntervalSeconds": 30,
    "MaximumReceiveMessageSize": 32768
  },
  "BackgroundServices": {
    "CleanupService": {
      "EnableCleanup": true,
      "CleanupIntervalMinutes": 60,
      "RetentionDays": 30
    }
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "DefaultCacheDurationSeconds": 300,
    "EnableDatabaseQueryOptimization": true
  },
  "ApplicationInsights": {
    "ConnectionString": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithCorrelationId"
    ]
  },
  "AllowedHosts": "*"
}
