# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_SERVER=LAPTOP-7KVDNDSP
DB_NAME=GenericAPI
DB_TRUSTED_CONNECTION=true
DB_MULTIPLE_ACTIVE_RESULT_SETS=true
DB_TRUST_SERVER_CERTIFICATE=true
DB_CONNECTION_STRING=Server=${DB_SERVER};Database=${DB_NAME};Trusted_Connection=${DB_TRUSTED_CONNECTION};MultipleActiveResultSets=${DB_MULTIPLE_ACTIVE_RESULT_SETS};TrustServerCertificate=${DB_TRUST_SERVER_CERTIFICATE}

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_CONNECTION_STRING=localhost:6379
REDIS_INSTANCE_NAME=GenericAPI
REDIS_DATABASE=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_ABORT_ON_CONNECT_FAIL=false
REDIS_CONNECT_RETRY=3
REDIS_CONNECT_TIMEOUT=5000

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!123456789@#$%^&*()
JWT_ISSUER=GenericAPI
JWT_AUDIENCE=GenericAPIUsers
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
JWT_ALGORITHM=HS256

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3001,http://localhost:4200,https://localhost:4201,http://localhost:5173,https://localhost:5174
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_EMAIL=noreply@genericapi.com
EMAIL_FROM_NAME=Generic API
EMAIL_ENABLE_SSL=true
EMAIL_TIMEOUT=30000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xlsx,.zip
FILE_UPLOAD_PATH=uploads
FILE_UPLOAD_USE_CLOUD_STORAGE=false
FILE_UPLOAD_CLOUD_CONTAINER=uploads

# ===========================================
# AZURE STORAGE (OPTIONAL)
# ===========================================
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=files
AZURE_STORAGE_CDN_URL=

# ===========================================
# CACHE CONFIGURATION
# ===========================================
CACHE_DEFAULT_EXPIRATION_MINUTES=30
CACHE_SLIDING_EXPIRATION_MINUTES=15
CACHE_MAX_SIZE=1000
CACHE_COMPRESSION_ENABLED=true
CACHE_SERIALIZATION_TYPE=JSON

# ===========================================
# AUDIT LOG CONFIGURATION
# ===========================================
AUDIT_LOG_SECRET_KEY=YourAuditLogSecretKeyForIntegrityVerification123456789@#$%^&*()
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENABLE_DATABASE_STORAGE=true
AUDIT_LOG_ENABLE_FILE_STORAGE=false
AUDIT_LOG_INCLUDE_SENSITIVE_DATA=false

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
RATE_LIMIT_ENABLE_ENDPOINT=true
RATE_LIMIT_STACK_BLOCKED=false
RATE_LIMIT_REAL_IP_HEADER=X-Real-IP
RATE_LIMIT_CLIENT_ID_HEADER=X-ClientId
RATE_LIMIT_HTTP_STATUS_CODE=429
RATE_LIMIT_GENERAL_REQUESTS_PER_MINUTE=100
RATE_LIMIT_GENERAL_REQUESTS_PER_HOUR=1000
RATE_LIMIT_GENERAL_REQUESTS_PER_DAY=10000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
SECURITY_ENABLE_HEADERS=true
SECURITY_ENABLE_CSP=true
SECURITY_ENABLE_HSTS=true
SECURITY_CSP_REPORT_URI=/api/security/csp-report
SECURITY_MAX_REQUEST_BODY_SIZE=10485760
SECURITY_ENABLE_REQUEST_SIZE_LIMIT=true
SECURITY_ENABLE_ANTIFORGERY=true
SECURITY_REQUIRE_HTTPS=true

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_ENABLE_DETAILED_ERRORS=false
MONITORING_METRICS_PATH=/metrics
MONITORING_HEALTH_CHECK_PATH=/health
MONITORING_ENABLE_PROMETHEUS=true

# ===========================================
# APPLICATION INSIGHTS / TELEMETRY
# ===========================================
APPLICATION_INSIGHTS_CONNECTION_STRING=
APPLICATION_INSIGHTS_INSTRUMENTATION_KEY=
TELEMETRY_ENABLE_TRACING=true
TELEMETRY_SERVICE_NAME=GenericAPI
TELEMETRY_SERVICE_VERSION=1.0.0

# ===========================================
# MULTI-TENANT CONFIGURATION
# ===========================================
MULTI_TENANT_DEFAULT_ID=default
MULTI_TENANT_DEFAULT_IDENTIFIER=default
MULTI_TENANT_DEFAULT_NAME=Default Tenant
MULTI_TENANT_ENABLE_ISOLATION=false
MULTI_TENANT_RESOLUTION_STRATEGY=Claim

# ===========================================
# SIGNALR CONFIGURATION
# ===========================================
SIGNALR_ENABLE_DETAILED_ERRORS=false
SIGNALR_KEEP_ALIVE_INTERVAL=15
SIGNALR_CLIENT_TIMEOUT_INTERVAL=30
SIGNALR_MAX_RECEIVE_MESSAGE_SIZE=32768
SIGNALR_ENABLE_CORS=true

# ===========================================
# BACKGROUND SERVICES CONFIGURATION
# ===========================================
CLEANUP_SERVICE_ENABLE=true
CLEANUP_SERVICE_INTERVAL_MINUTES=60
CLEANUP_SERVICE_RETENTION_DAYS=30
CLEANUP_SERVICE_ENABLE_LOG_CLEANUP=true
CLEANUP_SERVICE_ENABLE_AUDIT_CLEANUP=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
PERFORMANCE_ENABLE_RESPONSE_COMPRESSION=true
PERFORMANCE_ENABLE_RESPONSE_CACHING=true
PERFORMANCE_DEFAULT_CACHE_DURATION=300
PERFORMANCE_ENABLE_DB_QUERY_OPTIMIZATION=true
PERFORMANCE_ENABLE_ASYNC_ENUMERABLE=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_MINIMUM_LEVEL=Information
LOG_FILE_PATH=logs/app-.log
LOG_FILE_RETENTION_DAYS=30
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_ENABLE_SEQ=false
LOG_SEQ_URL=http://localhost:5341
LOG_ENABLE_ELASTICSEARCH=false
LOG_ELASTICSEARCH_URL=http://localhost:9200

# ===========================================
# API VERSIONING
# ===========================================
API_VERSION_DEFAULT=1.0
API_VERSION_HEADER_NAME=X-Version
API_VERSION_QUERY_PARAM=version
API_VERSION_URL_SEGMENT=true

# ===========================================
# EXTERNAL SERVICES
# ===========================================
EXTERNAL_SERVICE_TIMEOUT=30000
EXTERNAL_SERVICE_RETRY_COUNT=3
EXTERNAL_SERVICE_RETRY_DELAY=1000

# ===========================================
# MESSAGE QUEUE (RABBITMQ)
# ===========================================
RABBITMQ_CONNECTION_STRING=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE_NAME=generic-api-queue
RABBITMQ_EXCHANGE_NAME=generic-api-exchange
RABBITMQ_ENABLE=false

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5223;https://localhost:7223
ENVIRONMENT_NAME=Development

# ===========================================
# SWAGGER/OPENAPI CONFIGURATION
# ===========================================
SWAGGER_ENABLE=true
SWAGGER_ROUTE_PREFIX=swagger
SWAGGER_TITLE=Generic API
SWAGGER_VERSION=v1
SWAGGER_DESCRIPTION=A comprehensive .NET Web API
SWAGGER_CONTACT_NAME=API Support
SWAGGER_CONTACT_EMAIL=support@company.com
SWAGGER_INCLUDE_XML_COMMENTS=true

# ===========================================
# FEATURE FLAGS
# ===========================================
FEATURE_ENABLE_NEW_UI=false
FEATURE_ENABLE_BETA_ENDPOINTS=false
FEATURE_ENABLE_EXPERIMENTAL_CACHING=false
FEATURE_ENABLE_ADVANCED_ANALYTICS=false

# ===========================================
# DEVELOPMENT/DEBUG SETTINGS
# ===========================================
DEBUG_ENABLE_SENSITIVE_DATA_LOGGING=false
DEBUG_ENABLE_DETAILED_ERRORS=false
DEBUG_ENABLE_DEVELOPER_EXCEPTION_PAGE=true
DEBUG_ENABLE_SQL_LOGGING=false
